<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"

    android:background="@drawable/main_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30pt"
        android:layout_weight="33"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_bg"
        android:orientation="vertical"
        >
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/video_call_screen_activity_title"
            android:alpha="1.0"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="10dp"
            android:alpha="1.0"
            android:gravity="center"
            android:src="@drawable/launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:layout_gravity="center"
        android:layout_weight="37"
        android:background="@drawable/main_bg"
        android:backgroundTint="#77ffffff"
        android:backgroundTintMode="src_over"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/anonymousavatar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="1.0"
            android:gravity="center"
            android:text="@string/incoming_call_text"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Doctor"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:orientation="vertical"
        android:background="@drawable/main_bg"
        android:backgroundTint="#77ffffff"
        android:backgroundTintMode="src_over"
        tools:ignore="NestedWeights">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">
            <Button
                android:id="@+id/accept_button"
                android:layout_width="34dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:layout_marginStart="15pt"
                android:layout_marginLeft="15pt"
                android:background="@drawable/video_accept3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:layout_marginTop="10dp"
                android:background="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <Button
                android:id="@+id/decline_button"
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:layout_weight="2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15pt"
                android:layout_marginRight="15pt"
                android:background="@drawable/decline" />
        </TableRow>

    </LinearLayout>




</LinearLayout>